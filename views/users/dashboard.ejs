<% layout("/layouts/boilerplate") %>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Dashboard</h2>
        <button id="darkModeToggle" class="btn btn-outline-dark rounded-pill">Toggle Dark Mode</button>
    </div>

    <!-- Quick Stats -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card text-center p-4 shadow-sm">
                <h4>Total Listings</h4>
                <p class="fs-2 text-danger">5</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center p-4 shadow-sm">
                <h4>Upcoming Trips</h4>
                <p class="fs-2 text-success">2</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center p-4 shadow-sm">
                <h4>Messages</h4>
                <p class="fs-2 text-primary">1</p>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100 p-4">
                <h5 class="card-title">Manage Listings</h5>
                <p class="card-text">View and edit your property listings.</p>
                <a href="/listings/mine" class="btn btn-outline-dark rounded-pill">View My Listings</a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100 p-4">
                <h5 class="card-title">Manage Bookings</h5>
                <p class="card-text">Check your booking history and upcoming reservations.</p>
                <a href="/bookings" class="btn btn-outline-danger rounded-pill">View Bookings</a>
            </div>
        </div>
    </div>
</div>

<script>
// Dark Mode Toggle
const toggleBtn = document.getElementById('darkModeToggle');
toggleBtn.addEventListener('click', () => {
    document.body.classList.toggle('bg-dark');
    document.body.classList.toggle('text-white');
    localStorage.setItem('darkMode', document.body.classList.contains('bg-dark'));
});

// On page load
if (localStorage.getItem('darkMode') === 'true') {
    document.body.classList.add('bg-dark', 'text-white');
}
</script>



