<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show d-flex align-items-center justify-content-between shadow-lg rounded-4 p-4 mt-3 mb-4 col-md-6 offset-md-3" role="alert" style="font-size: 1rem; animation: slideDown 0.5s ease;">
      <div class="d-flex align-items-center">
        <i class="bi bi-check-circle-fill me-2 fs-4 text-success"></i>
        <span><%= success %></span>
      </div>
      <button type="button" class="btn-close ms-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center justify-content-between shadow-lg rounded-4 p-4 mt-3 mb-4 col-md-6 offset-md-3" role="alert" style="font-size: 1rem; animation: slideDown 0.5s ease;">
      <div class="d-flex align-items-center">
        <i class="bi bi-exclamation-triangle-fill me-2 fs-4 text-danger"></i>
        <span><%= error %></span>
      </div>
      <button type="button" class="btn-close ms-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  
  <!-- âœ… Bootstrap JS (required for alert close to work) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
